<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marvelworld">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".signup.view.SignUpActivity"
            android:theme="@style/SplashScreen" />
        <activity android:name=".signin.view.SignInActivity"
            android:theme="@style/SplashScreen"/>
        <activity
            android:name=".splashscreen.views.SplashScreen2"
            android:theme="@style/SplashScreen" />
        <activity
            android:name=".splashscreen.views.SplashScreen1"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.views.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>