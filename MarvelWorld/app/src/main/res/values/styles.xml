<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChipFilterTextAppearanceTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SignInInput">
        <item name="hintTextColor">@color/text_input</item>
        <item name="android:textColorHint">@color/text_input</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">#00FFFFFF</item>
        <item name="startIconTintMode">screen</item>
        <item name="errorTextColor">@color/white</item>
        <item name="errorIconTint">@color/white</item>
    </style>

</resources>