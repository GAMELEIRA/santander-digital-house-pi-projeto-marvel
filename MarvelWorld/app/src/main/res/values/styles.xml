<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">140dp</item>
        <item name="color">@color/white</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ChipFilterTextAppearanceTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilterTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorHint">#32FFFFFF</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="endIconMode">none</item>
    </style>

    <style name="FilterTextInput">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>